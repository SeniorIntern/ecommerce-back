{
  "compilerOptions": {
    "target": "ES2020", // Target JavaScript version.
    "module": "ESNext", // Use ES modules.
    "moduleResolution": "Node", // Resolve modules to Node.js style.
    "esModuleInterop": true, // Enables compatibility with CommonJS modules.
    "forceConsistentCasingInFileNames": true, // Disallow inconsistently-cased references to the same file.
    "strict": true, // Enable all strict type-checking options.
    "skipLibCheck": true, // Skip type checking of declaration files.
    "outDir": "./dist", // Redirect output structure to the 'dist' directory.
    "rootDir": "./src", // Specify the root directory of input files.
    "allowSyntheticDefaultImports": true, // Allow default imports from modules with no default export.
    "resolveJsonModule": true, // Include modules with .json extensions.
    "sourceMap": true, // Generate corresponding .map files for debugging.
    "declaration": true, // Generate .d.ts files alongside .js.
    "noEmitOnError": true // Do not emit outputs if there are errors.
  },
  "include": ["src/**/*"], // Include all TypeScript files in the 'src' directory.
  "exclude": ["node_modules", "dist"] // Exclude 'node_modules' and 'dist' directories.
}
